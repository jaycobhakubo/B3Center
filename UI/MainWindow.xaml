<ui:EliteWindowBase x:Class="GameTech.Elite.Client.Modules.B3Center.UI.MainWindow" x:ClassModifier="internal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="clr-namespace:GameTech.Elite.UI;assembly=GameTech.Elite.UI"
                    
     xmlns:localReports="clr-namespace:GameTech.Elite.Client.Modules.B3Center.UI.ReportViews"
     xmlns:localSettings="clr-namespace:GameTech.Elite.Client.Modules.B3Center.UI.SettingViews"
   
    Title="B3 Center -- FortuNet, Inc." Width="1024" Height="710" Icon="../Resources/B3Center.ico"
     WindowStartupLocation="CenterScreen" Loaded="OnLoaded">
    <ui:EliteWindowBase.Resources>
    </ui:EliteWindowBase.Resources>
    <DockPanel x:Name="m_layoutRoot">
        <Menu x:Name="m_mainMenu" DockPanel.Dock="Top">
            <MenuItem x:Name="m_fileMenu" Header="_File">
                <MenuItem x:Name="m_fileExitMenuItem" Header="E_xit" Command="{Binding FileExitCommand}" />
            </MenuItem>
        </Menu>
        <TabControl Focusable="False">
            <TabItem Header="Session">
                <Border>
                    <TextBlock Text="SESSION" FontSize="120"></TextBlock>
                </Border>
            </TabItem>
      
                <TabItem Header="Report">
                <Border>

                    <localReports:ReportsView DataContext="{Binding ReportsVm}" />
                </Border>
            </TabItem>
            
            <TabItem Header="Setting" >
                <Border>
                    <localSettings:SettingView DataContext="{Binding SettingVm}" />
                </Border>
            </TabItem>
            
            <TabItem Header="Operator">
                <Border>
                    <TextBlock Text="OPERATOR" FontSize="120"></TextBlock>
                </Border>
            </TabItem>
        </TabControl>
    </DockPanel>
</ui:EliteWindowBase>
