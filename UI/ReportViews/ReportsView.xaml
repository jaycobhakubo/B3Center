<UserControl x:Class="GameTech.Elite.Client.Modules.B3Center.UI.ReportViews.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             
              xmlns:v="clr-namespace:GameTech.Elite.Client.Modules.B3Center.UI.ReportViews"
              xmlns:vm="clr-namespace:GameTech.Elite.Client.Modules.B3Center.ViewModels.ReportViewModel"
    
           
             xmlns:base="clr-namespace:GameTech.Elite.Base;assembly=GameTech.Elite.Base"
             xmlns:ui="clr-namespace:GameTech.Elite.UI;assembly=GameTech.Elite.UI"
             mc:Ignorable="d" 
              d:DesignHeight="620"
             d:DesignWidth="1000">
             
             <!--d:DesignHeight="600" d:DesignWidth="600"-->
    <UserControl.Resources>

        <!--<DataTemplate DataType="{x:Type vm:AccountHistoryReportVm}">
            <v:AccountHistoryReportView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:AccountReportVm}">
            <v:AccountReportView />
        </DataTemplate>-->


        <Style TargetType="{x:Type ListBoxItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Border Name="SlugContainer" Background="Transparent" BorderBrush="Black" BorderThickness="1" CornerRadius="2" Margin="0,5,0,0" Padding="5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!-- snipped for brevity -->

                                <ContentPresenter Grid.Row="1" />

                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>
    
    
    
    <DockPanel>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" Name="ReportMenuColumn"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <Border Grid.Column="1" CornerRadius="0,5,5,0"  Style="{DynamicResource LightBlueBorder}" Margin="4">
                <ContentPresenter Name="ReportsTransitionControl" Content="{Binding ReportTransitionControlContent}"/>
            </Border>

            <Border Style="{DynamicResource DarkBlueBorder}" Margin="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0" Grid.Column="0"  VerticalScrollBarVisibility="Auto" >
                        <!--<TextBlock Grid.Row="0" Text="Reports" Style="{StaticResource HeaderStyle2}"/>-->
                        <ListBox Margin="15"  ItemsSource="{Binding Reports}" SelectedItem="{Binding ReportSeleccted}" >
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <!--<ListBox.ItemsSource ="{Binding ReportList}"/>-->
                        </ListBox>
                    </ScrollViewer>
                </Grid>
            </Border>

            <Border Grid.Column="1" Background="White" Opacity=".9" Visibility="{Binding IsPrinting, Converter={StaticResource VisibilityConverter}}" Margin="0,100,0,0">
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" Width="200" TextWrapping="Wrap" TextAlignment="Center" Text="Printing"/>
            </Border>
            <Border Grid.Column="1" Background="White" Opacity=".9" Visibility="{Binding IsLoading, Converter={StaticResource VisibilityConverter}}" Margin="0,100,0,0" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" Width="200" TextWrapping="Wrap" TextAlignment="Center" Text="Loading"/>
            </Border>
        </Grid>
    </DockPanel>
  
</UserControl>
