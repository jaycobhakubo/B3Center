            <StackPanel Name="stkpnlSessionSetting" Grid.Column="1" Grid.Row="1" Height="Auto">
                <Label x:Name="lblCallSpeedMin_Copy" Grid.Row="7" Grid.Column="3" Content="Payout Limit" HorizontalAlignment="Left"  VerticalAlignment="Top"  Width="130"  Height="Auto" Margin="0 0 0 0" Padding="0 0 0 2"/>
                <TextBox Name="txtbxPayoutLimit" Grid.Column="3"   Grid.Row="7" TextWrapping="Wrap" VerticalAlignment="Bottom" Text="" TabIndex="1" Tag="39" PreviewTextInput="txtbxPrice_PreviewTextInput2" PreviewKeyDown="txtbx_PreviewKeyDown" MaxLength="9" />
                <Label x:Name="lblCallSpeedMin_Copy1" Grid.Row="7" Grid.Column="3" Content="Jackpot Limit" HorizontalAlignment="Left"  VerticalAlignment="Top"  Width="130"  Height="Auto"/>
                <TextBox Name="txtbxJackpotLimit" Grid.Column="3"   Grid.Row="7" TextWrapping="Wrap" VerticalAlignment="Bottom" Text="" TabIndex="2" Tag="40"  PreviewTextInput="txtbxPrice_PreviewTextInput2" PreviewKeyDown="txtbx_PreviewKeyDown" MaxLength="9"  />
                <CheckBox Name="chkbxEnforeMix" Content="Enforce Mix" Grid.Column="3" HorizontalAlignment="Left"  Grid.Row="7"  TabIndex="3" Tag="41"  Margin="0 31 0 0"/>
            </StackPanel>
            
           
          

          
           

      

