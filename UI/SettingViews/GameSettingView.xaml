                <ColumnDefinition Width="279"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>-->
            <!--<Menu x:Name="m_mainMenu" DockPanel.Dock="Top">
            <MenuItem x:Name="m_fileMenu" Header="_File">
                <MenuItem x:Name="m_fileExitMenuItem" Header="E_xit" Command="{Binding FileExitCommand}" />
            </MenuItem>
        </Menu>-->
            <TabControl Focusable="False"  Background="Transparent" >
               
                <TabItem Header="Crazy Bout" Background="Transparent">
                    <Border VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,15,0,0">
                        <local:GameSettingCrazyBoutView/>
                    </Border>
                </TabItem>

                <TabItem Header="JailBreak">
                    <Border VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,15,0,0">
                        <local:GameSettingJailBreak/>
