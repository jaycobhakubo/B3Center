<UserControl x:Class="GameTech.Elite.Client.Modules.B3Center.UI.SettingViews.SystemSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
            d:DesignHeight="710" d:DesignWidth="824">
    <UserControl.Resources>
       
        <!--<BooleanToVisibilityConverter x:Key="VisibilityConverter" />-->
        <!--<ResourceDictionary Source="\Resources\OriginalStyle.xaml"></ResourceDictionary>-->
    </UserControl.Resources>
    <Border>
        <Grid Name="gridSystemSettings" GotFocus="Grid_GotFocus">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="279"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="279"/>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="54"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="54"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="54"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="54"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="54"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="54"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="54"/>
      
                <RowDefinition />
                <RowDefinition Height="Auto"/>

            </Grid.RowDefinitions>
            <!--Site Name-->
            <Label Content="Site Name" Grid.Column="1" HorizontalAlignment="Left"  Grid.Row="1" VerticalAlignment="Top"/>
            <TextBox Name="txtbxSiteName" Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Bottom" Text="" Tag="56" TabIndex="1" MaxLength="50" />

            <!--Hand Payout Trigger-->
            <Label Content="Hand Pay Trigger" Grid.Column="1" HorizontalAlignment="Left"  Grid.Row="3" VerticalAlignment="Top" Height="Auto"/>
            <TextBox Name="txtbxHandPayoutTrigger" Grid.Column="1"   Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Bottom" Text="" TabIndex="2" Tag="42" PreviewTextInput="txtbxPrice_PreviewTextInput2" PreviewKeyDown="txtbx_PreviewKeyDown" MaxLength="14" />

            <StackPanel Name="stkpnlSystemSetting2" Grid.Row="9" Grid.Column="3" Grid.RowSpan="6" Margin="0,0,0,35">
                <CheckBox Name="chkbxDualAccount" Content="Dual Account" Grid.Column="3" HorizontalAlignment="Left"  Grid.Row="13" VerticalAlignment="Bottom"  Width="113" Tag="51" TabIndex="12" Margin="0 31 0 0"/>
                <CheckBox Name="chkbxMultiOperator" Content="Multi Operator" Grid.Column="3" HorizontalAlignment="Left"  Grid.Row="7" VerticalAlignment="Bottom" Tag="52" TabIndex="13" Margin="0 30 0 0"/>
                <CheckBox Name="chkbxNorthDakotaMode" Content="North Dakota Mode" Grid.Column="3" HorizontalAlignment="Left"  Grid.Row="11" VerticalAlignment="Bottom" TabIndex="15" Tag="54" Margin="0 30 0 0"/>
                <CheckBox Name="chkbxEnableUK" Content="Enable UK" Grid.Column="3" HorizontalAlignment="Left"  Grid.Row="15" VerticalAlignment="Bottom" Tag="50" TabIndex="11" Margin="0 30 0 0"/>
            

            </StackPanel>

            <!--<CheckBox Name="chkbxAutoSessionEnd" Content="Auto Session End" Grid.Column="3" HorizontalAlignment="Left"  Grid.Row="13" VerticalAlignment="Bottom" TabIndex="16" Tag="55" />-->

            <!--Main Vol-->
            <Label x:Name="lblCallSpeedMin" Grid.Row="7" Grid.Column="3" Content="Main Vol" HorizontalAlignment="Left"    Width="66" Height="Auto"  VerticalAlignment="Top"/>
            <ComboBox 
            	x:Name="cmbxMainVol" 
            	Grid.Row="7" 
            	Grid.Column="3" 
            	 VerticalAlignment="Bottom" TabIndex="10" Height="22" 
            	FontWeight="Light" FontFamily="Segoe UI" Tag="57"/>

            <!--Minimum Players-->
            <Label x:Name="lblMaxCards" Grid.Row="1" Grid.Column="3" Content="Minimum Players" HorizontalAlignment="Left"   Width="128"  />

            <!--Vip Pointg Multi Player-->
            <Label x:Name="lblMaxCards_Copy" Grid.Row="5" Grid.Column="1" Content="VIP Point Multiplier" HorizontalAlignment="Left"   Width="138" Height="Auto" VerticalAlignment="Top"/>

            <!--Mag Card Sentinel Start-->
            <Label x:Name="lblMaxCards_Copy1" Grid.Row="7" Grid.Column="1" Content="Mag Card Sentinel Start" HorizontalAlignment="Left"   Width="178" Height="Auto"  VerticalAlignment="Top"  />

            <!--Mag Card Sentinel End-->
            <Label x:Name="lblMaxCards_Copy2" Grid.Row="9" Grid.Column="1" Content="Mag Card Sentinel End" HorizontalAlignment="Left"   Width="178" Height="Auto"  VerticalAlignment="Top" />

            <!--Currency-->
            <Label x:Name="lblMaxCards_Copy4" Grid.Row="3" Grid.Column="3" Content="Currency" HorizontalAlignment="Left"   Width="178" Height="Auto"  VerticalAlignment="Top"/>

            <!--RNG Ball Call Time-->
            <Label x:Name="lblMaxCards_Copy5" Grid.Row="13" Grid.Column="1" Content="RNG Ball Call Time (milliseconds)" Height="Auto"  VerticalAlignment="Top"/>

            <!--Set Player pin Length-->
            <Label x:Name="lblMaxCards_Copy6" Grid.Row="11" Grid.Column="1" Content="Player PIN Length" HorizontalAlignment="Left"   Width="178" Height="Auto"  VerticalAlignment="Top"/>
            <TextBox x:Name="txtbxVipPointPlayer" Grid.Column="1"    Grid.Row="5" TextWrapping="Wrap" VerticalAlignment="Bottom" Text="" Tag="44" TabIndex="3" PreviewTextInput="txtbxPrice_PreviewTextInput2" PreviewKeyDown="txtbx_PreviewKeyDown" MaxLength="15" />
            <TextBox x:Name="txtbxMagCardStart" Grid.Column="1"   Grid.Row="7" TextWrapping="Wrap" VerticalAlignment="Bottom" Text="" TabIndex="4" Tag="45" MaxLength="1"  />
            <TextBox x:Name="txtbxMagCardEnd" Grid.Column="1"  Grid.Row="9" TextWrapping="Wrap" VerticalAlignment="Bottom" Text="" TabIndex="5" Tag="46" MaxLength="1"  />
            <TextBox 
                x:Name="txtbxRNGBallCallTime" 
                Grid.Column="1"   
                Grid.Row="13" 
                TextWrapping="Wrap" 
                VerticalAlignment="Bottom" 
                Text="" 
                Tag="48" 
                TabIndex="7" 
                PreviewKeyDown="txtbx_PreviewKeyDown" 
                PreviewTextInput="txtbxNumericOnly_PreviewTextInput" 
                MaxLength="8" LostFocus="txtbxRNGBallCallTime_LostFocus"  />
            <StackPanel Name="stkpnlSystemSetting1" Grid.Column="1" Grid.Row="14" Grid.RowSpan="2">
                <CheckBox Name="chkbxCommonRNGBallCall" Content="Common RNG Ball Call" Grid.Column="3" HorizontalAlignment="Left"  Grid.Row="9" VerticalAlignment="Bottom" TabIndex="14" Tag="53" Margin="0 31 0 0"/>
            </StackPanel>

         
            <ComboBox 
            	x:Name="cmbxCurrency" 
            	Grid.Row="3" Grid.Column="3"
            	VerticalAlignment="Bottom"  TabIndex="9" Height="22" 
            	FontWeight="Light" FontFamily="Segoe UI" Tag="47" />
            <TextBox 
            	x:Name="txtbxMinimumPlayers" 
            	Grid.Column="3"   
            	Grid.Row="1" 
            	TextWrapping="Wrap" 
            	VerticalAlignment="Bottom" 
            	Text="" 
            	Tag="43" 
            	TabIndex="7" 
            	PreviewKeyDown="txtbx_PreviewKeyDown" 
            	PreviewTextInput="txtbxNumericOnly_PreviewTextInput" 
            	MaxLength="8"   />
            <TextBox 
            	x:Name="txtbxPlayerpinLength" 
            	Grid.Column="1"   
            	Grid.Row="11" 
            	TextWrapping="Wrap" 
            	VerticalAlignment="Bottom" 
            	Text="" 
            	Tag="49" 
            	TabIndex="7" 
            	PreviewKeyDown="txtbx_PreviewKeyDown" 
            	PreviewTextInput="txtbxNumericOnly_PreviewTextInput" 
            	MaxLength="8"  />
            <Label x:Name="lblMaxCards_Copy3" Grid.Row="5" Grid.Column="3" Content="Auto Session End" HorizontalAlignment="Left"   Width="178" Height="Auto"  VerticalAlignment="Top"/>
            <ComboBox 
            	x:Name="cmbxAutoSessionEnd" 
            	Grid.Row="5" Grid.Column="3"
            	VerticalAlignment="Bottom"  TabIndex="9" Height="22" 
            	FontWeight="Light" FontFamily="Segoe UI" Tag="55" />


        </Grid>
    </Border>
</UserControl>
