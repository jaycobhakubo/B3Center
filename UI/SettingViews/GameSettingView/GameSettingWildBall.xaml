<UserControl x:Class="GameTech.Elite.Client.Modules.B3Center.UI.SettingViews.GameSettingWildBall"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
            >
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="VisibilityConverter" />
    </UserControl.Resources>
    <Border>
        <Grid Name="gridCrazyBout">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="279"/>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="279"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="1">
                <Label  Content="Game Pay Table"  />
                <ComboBox Name="cmbxGamePayTable" Tag="58"/>

                <Label Content="Max Bet Level" />
                <ComboBox 
                Name="cmbxMaxBetLevel" 
               Tag="9"             
                >
                </ComboBox>

                <Label x:Name="lblMaxCards"  Content="Max Cards"/>
                <ComboBox 
                x:Name="cmbxMaxcards" 
                 Tag="10">
                </ComboBox>

                <Label x:Name="lblCallSpeedMin"  Content="Call Speed"    />
                <ComboBox 
            	x:Name="cmbxCallSpeedMin" 
            	 Tag="59"/>
            </StackPanel>
            <StackPanel Grid.Column="3">
                <CheckBox Name="chkbxAutoPlay"   Content="Auto Play" />
                <CheckBox Name="chkbxHideSerialNumber" Content="Hide Serial Number"  />
                <CheckBox Name="chkbxAutoCall" Visibility="Collapsed"  Content="Auto Call"  Tag="12"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
