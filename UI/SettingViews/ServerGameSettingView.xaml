<UserControl x:Class="GameTech.Elite.Client.Modules.B3Center.UI.SettingViews.ServerGameSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm ="clr-namespace:GameTech.Elite.Client.Modules.B3Center.ViewModels.Settings"
             mc:Ignorable="d" 
             >
    <UserControl.Resources>
        
    </UserControl.Resources>
    <Border>
        <Grid    HorizontalAlignment="Center"  VerticalAlignment="Top" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="279"/>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="279"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel  Grid.Column="1" Grid.Row="0">
                <Label  Content="Min player"/>
                <TextBox Name="txtMinPlayer" Text="{Binding ServerSetting_.MinPlayer}"  
                         MaxLength="9"  
                         Tag="34"    
                         TextChanged="ValidateUserInput"                                          
                         PreviewKeyDown="DontAllowThisKeyboardinput" 
                         PreviewTextInput="_PreviewTextInput"                   
                         />
                <Label  Content="Game start delay (sec)"/>
                <TextBox Name="txtGameStartDelay" Text="{Binding ServerSetting_.GameStartDelay}"     MaxLength="9" Tag="35" 
                         TextChanged="ValidateUserInput"                                          
                         PreviewKeyDown="DontAllowThisKeyboardinput" 
                         PreviewTextInput="_PreviewTextInput"          
                         />
                <Label  Content="Consolation prize"/>
                <TextBox Name="txtConsolationPrize" Text="{Binding ServerSetting_.Consolation}"    MaxLength="9" Tag="36" 
                         TextChanged="ValidateUserInput"                                          
                         PreviewKeyDown="DontAllowThisKeyboardinput" 
                         PreviewTextInput="_PreviewTextInput"           
                         />
                <Label  Content="Game recall password"/>
                <TextBox Name="txtGameRecallPassword" Text="{Binding ServerSetting_.GameRecallPassw}"   MaxLength="25" Tag="37" 
                        TextChanged="ValidateUserInput"                                          
                         PreviewKeyDown="DontAllowThisKeyboardinput"                       
                         />
                <Label   Content="Wait count down (sec)"/>
                <TextBox Name="txtGameWaitCountDown" Text="{Binding ServerSetting_.WaitCountDown}"  MaxLength="10" Tag="38" 
                         TextChanged="ValidateUserInput"                                          
                         PreviewKeyDown="DontAllowThisKeyboardinput" 
                         PreviewTextInput="_PreviewTextInput"          
                         />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>


